        <script type="text/javascript">
            $j(document).ready(function(){

                $j(".mobile-menu-opener").click(function(e){
                    $j("#header-nav").animate({
                        width: "250"
                    }, 500).addClass('open');
                    
                    e.stopPropagation();
                });

                $j("#header-nav").click(function(e){                    
                    e.stopPropagation();
                });

                $j("body").click(function(){
                    if($j("#header-nav").hasClass('open')){
                        $j("#header-nav").animate({
                            width: "0"
                        }, 500).removeClass('open');
                    }
                });

            });
        </script>

